rules_version = '2';

// Firebase Storage Rules for MARA+ Educational Platform
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload content
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public assets (read-only for all users)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }
    
    // Study materials (read for authenticated users, write for teachers/admin)
    match /content/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }
    
    // Temporary files (authenticated users only, auto-cleanup via functions)
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}