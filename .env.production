# MARA+ Production Environment Configuration

# Firebase Production Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_production_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=maraplus-production.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=maraplus-production
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=maraplus-production.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (Server-side only)
FIREBASE_PROJECT_ID=maraplus-production
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@maraplus-production.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Production Database URL
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://maraplus-production-default-rtdb.firebaseio.com/

# Claude AI Production Configuration
CLAUDE_API_KEY=your_production_claude_api_key
CLAUDE_MODEL=claude-3-sonnet-20240229

# MRSM Academic Data Sources
MRSM_PORTAL_URL=https://portal.mrsm.edu.my
MRSM_API_KEY=your_production_mrsm_api_key

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_API_URL=https://your-production-domain.com/api

# Security (Production)
JWT_SECRET=your_secure_production_jwt_secret_key
ENCRYPTION_KEY=your_secure_production_encryption_key

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
REDIS_URL=your_redis_url
CACHE_TTL=3600

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com