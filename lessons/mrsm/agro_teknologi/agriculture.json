            {
              "type": "laboratory_work",
              "duration": 35,
              "description": "Soil testing for NPK levels and pH analysis"
            },
            {
              "type": "practical_application",
              "duration": 20,
              "description": "Calculate fertilizer requirements for different crops"
            },
            {
              "type": "discussion",
              "duration": 5,
              "description": "Compare organic vs synthetic fertilizers"
